---
interface Props {
	title: string;
	link: string;
	image: string;
	button?: string;
}

const { image, link, title, button = "Learn More" } = Astro.props;
---

<article>
	<img src={image} alt={title} />
	<div>
		<h3 set:html={title} />
		<a href={link} class="btn">{button}</a>
	</div>
</article>

<style>
	article {
		max-width: fit-content;
		text-align: center;
	}

	img {
		object-fit: cover;
		object-position: center;
		aspect-ratio: 1/1;
		width: 100%;
		border-radius: var(--border-radius);
		max-width: 500px;
	}

	div {
		width: 100%;
		position: absolute;
		inset: auto 0 5% 0;
		padding: 0.5rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	h3 {
		color: var(--bg-color);
		text-wrap: balance;
		text-shadow:
			1px 1px 5px black,
			-1px -1px 5px black,
			1px -1px 5px black,
			1px -1px 5px black;

		@media (max-width: 768px) {
			font-size: 2rem;
		}
	}

	.btn {
		background-color: var(--fg-color);
		color: var(--bg-color);

		&:hover {
			background-color: var(--bg-color);
			color: var(--fg-color);
		}
	}
</style>
