---
import xIcon from "@/assets/x.svg?raw";
import FacebookIcon from "@/assets/facebook.svg?raw";
import YoutubeIcon from "@/assets/youtube.svg?raw";
import InstagramIcon from "@/assets/instagram.svg?raw";
import wIcon from "@/assets/W_symbol.svg?raw";
---

<footer>
	<a href="/">
		<Fragment set:html={wIcon} />
	</a>

	<section>
		<header>
			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/retreats">Retreats</a></li>
					<li><a href="/breathwork">Breathwork</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</nav>
		</header>
		<ul>
			<li>
				<a href="#" set:html={xIcon} />
			</li>
			<li>
				<a href="#" set:html={FacebookIcon} />
			</li>
			<li>
				<a href="#" set:html={YoutubeIcon} />
			</li>
			<li>
				<a href="#" set:html={InstagramIcon} />
			</li>
		</ul>
		<footer>
			<p>Â© Well-Vie. All Rights Reserved 2024. Licensing</p>
		</footer>
	</section>
</footer>

<style>
	footer:not(section footer) {
		margin-top: var(--section-gap);
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		justify-content: space-around;
		align-items: center;
		padding: 40px 2rem;
		background-color: var(--fg-color);
		border-radius: var(--border-radius) var(--border-radius) 0 0;
		color: var(--bg-color);
	}

	section {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: flex-start;
		gap: 2rem;

		@media (width < 768px) {
			align-items: center;
		}
	}

	section header nav ul {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1rem;
	}

	section ul {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-wrap: wrap;
		align-content: center;
		gap: 1rem;
	}

	p {
		color: currentColor;

		@media (width < 768px) {
			text-align: center;
		}
	}

	footer > a {
		width: 4rem;

		@media (width < 768px) {
			display: none;
		}
	}
</style>
