		</section>

		<!-- Acomdation and payment options -->
		<section class="accomodation">
			<h2>Accomodation options</h2>
			<article>
				<h3>Private</h3>
				<p>Enjoy a private room & bathroom for $850 Euros</p>

				<div>
					<a href="https://buy.stripe.com/5kAaIE3EUbbF0Vi3cf" class="btn"
