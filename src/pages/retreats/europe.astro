		</section>

		<!-- Carousel -->
		<section class="galery">
			{
				images.map((image, i) => (
					<button
						popovertarget={`gallery-${i}`}
						popovertargetaction="show"
					>
						<picture>
							<img
								src={image.default.src}
								alt="Palm Springs Retreat"
								
								
							/>
						</picture>
					</button>

					<dialog popover id={`gallery-${i}`}>
						<button popovertarget={`gallery-${i}`}
						popovertargetaction="hide">&times</button>
						<img
							src={image.default.src}
							alt="Palm Springs Retreat"
						/>
					</dialog>
				))
			}
		</section>

		<section class="cancellation">
			<h3>Purchasing Policy & Cancellations</h3>
			<p>The payment made at checkout is non-refundable unless the retreat is rescheduled due to unforeseen circumstances. If needed, your ticket can be transferred to another person with 14 days’ notice. No refunds will be provided for cancellations or no-shows.</p>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: var(--section-gap) auto;
		padding: 0 2rem;
		max-width: 1200px;
	}

	article > p {
		margin-bottom: var(--element-gap);
	}

	main > article,
	main > section {
		margin-bottom: var(--section-gap);
	}

	h2 {
		margin-bottom: var(--element-gap);
	}
	h3 {
		margin-bottom: var(--small-gap);
		font-weight: bold;
	}

	p.big {
		font-size: 1.5rem;
	}

	li {
		margin-bottom: var(--small-gap);
	}

	#week {
		display: grid;
		grid-template-areas:
			"title title title title"
			"thu fri sat sun";

		grid-template-columns: repeat(4, 1fr);
		grid-gap: var(--small-gap);

		@media (width <= 640px) {
			grid-template-areas: "title" "thu" "fri" "sat" "sun";
			grid-template-columns: 1fr;
		}
	}

	#week h2 {
		grid-area: title;
	}

	main > a {
		margin-block: var(--section-gap);
	}

	.center {
		text-align: center;
	}

	.galery {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		grid-gap: var(--small-gap);
		place-content: center;
		margin-block: var(--section-gap);


		picture {
			aspect-ratio: 16 / 9;
			overflow: hidden;
		}

		button img {
			object-fit: cover;
			width: 100%;
			height: 100%;
			cursor: pointer;
			transition: transform 0.3s ease;

			&:hover {
				transform: scale(1.2);
			}
		}

		button:has(img) {
			border: none;
			background: none;
		}

		dialog {
			padding: 0;
			border: none;
			background: none;
			position: fixed;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			z-index: 1000;

			&[popover] {
			/* Final state of the exit animation */
  				opacity: 0;
				transition: all 0.2s allow-discrete ease;
				transform: translate(-50%, -50%) scale(0.5);


			}

			&[popover]:popover-open {
				opacity: 1;
				transition: all 0.2s allow-discrete ease;
				transform: translate(-50%, -50%) scale(1);


				@starting-style {
					opacity: 0;
					transform: translate(-50%, -50%) scale(0.5);
				}
			}
		
		}

		dialog img {
			max-width: 100dvw;
			max-height: 100dvh;
			object-fit: contain;
			padding: 1.5rem;
		}

		dialog::backdrop {
			background: rgba(0, 0, 0, 0.5);
		}

		dialog button[popovertargetaction="hide"] {
			position: absolute;
			top: 0;
			right: 0;
			font-size: 2rem;
			background: none;
			border: none;
			color: white;
			cursor: pointer;
			z-index: 1001;
			margin: 1rem;

			&:hover {
				color: red;
			}
		}
	}

	.cancellation {
		background-color: var(--bg-color);
		padding: 1rem;
		border-radius: var(--border-radius);
		margin-block: var(--section-gap);
	}

	.accomodation {
		margin-block: var(--section-gap);
		display: flex;
		flex-wrap: wrap;
		gap: var(--small-gap);
		justify-content: center;
		
		h2 {
			flex: 1 0 100%;
			text-align: center;
		}

		article {

			flex: 1 0 300px;
			background-color: var(--bg-color);
			padding: 1rem;
			border-radius: var(--border-radius);

			h3 {
				text-align: center;
			}
		}

		p {
			text-align: center;
		}


		div {
			display: flex;
			justify-content: center;
			gap: var(--small-gap);
		}

	}
</style>
