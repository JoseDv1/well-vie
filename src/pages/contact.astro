---
import Layout from "@/layouts/Layout.astro";
import ContactForm from "@/components/ContactForm.svelte";
import Hero from "@/components/Hero.astro";
import { pages } from "@content";
const { address, getInTouch, title } = pages.contact;
---

<Layout title="Contact | Well-Vie">
	<Hero
		heading={title}
		image="/imgs/contact/for_contact.webp"
		position="50% 30%"
		pcTextPosition={["65%", "50%"]}
	/>
	<main>
		<section>
			<h3 class="slide" set:html={getInTouch} />
			<h3 class="slide" set:html={address} />
		</section>

		<!-- <form>
			<h2 class="slide">Sign up for our emails</h2>
			<input type="email" placeholder="Email Adress" />
			<button>Sign Up</button>
		</form> -->

		<article>
			<h2 class="slide">Questions? Send a message</h2>
			<ContactForm client:only="svelte" />
		</article>
	</main>
</Layout>

<style>
	main {
		margin: 0 auto;
		max-width: 1200px;
	}

	section {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-evenly;
		text-align: center;
		gap: var(--horizontal-gap);
		margin-block: var(--section-gap);

		& > * {
			flex: 1 1 500px;
		}
	}

	h2:not(form h2) {
		text-align: center;
		margin-bottom: var(--section-gap);
	}

	input {
		width: 100%;
		padding: 20px;
		min-height: 60px;
		border-radius: 8px;
		border: 2px solid var(--fg-light-color);
		background-color: var(--bg-color);
		opacity: 0.5;
		font-size: var(--paragraph);
		font-family: var(--gt-walsheim);
		color: var(--text-color);

		&:focus {
			outline: none;
			border-color: var(--fg-color);
			opacity: 1;
		}
	}

	form {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--element-gap);
		margin-bottom: var(--section-gap);
	}
</style>
